# ===========================================
# BEAUTY SALON CHATBOT - ENVIRONMENT VARIABLES
# ===========================================

# Application
APP_NAME=beauty-salon-bot
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# ===========================================
# DATABASE
# ===========================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=beauty_salon
POSTGRES_USER=beauty_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===========================================
# REDIS
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# Cache TTL (seconds)
CACHE_TTL_SERVICES=3600
CACHE_TTL_STYLISTS=3600
CACHE_TTL_INFO=3600

# ===========================================
# OPENAI
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_VISION_MODEL=gpt-4o
OPENAI_WHISPER_MODEL=whisper-1

# ===========================================
# CHATWOOT
# ===========================================
CHATWOOT_BASE_URL=https://your-chatwoot-instance.com
CHATWOOT_API_TOKEN=your_chatwoot_api_token_here
CHATWOOT_ACCOUNT_ID=1
CHATWOOT_INBOX_ID=1

# Webhook secret for validating incoming webhooks (optional)
CHATWOOT_WEBHOOK_SECRET=your_webhook_secret_here

# ===========================================
# GOOGLE CALENDAR
# ===========================================
# Path to Google service account credentials JSON file
GOOGLE_CREDENTIALS_PATH=/app/credentials/google_service_account.json

# Calendar ID (usually the email of the calendar)
GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com

# Timezone for calendar operations
CALENDAR_TIMEZONE=America/Mexico_City

# ===========================================
# GOOGLE DRIVE (for backups)
# ===========================================
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_MAX_MESSAGES=30
RATE_LIMIT_WINDOW_SECONDS=3600

# Message grouping delay (seconds)
MESSAGE_GROUP_DELAY=3

# ===========================================
# SCHEDULED JOBS
# ===========================================
# Owner's phone number for weekly reports (with country code, e.g., 521234567890)
OWNER_PHONE_NUMBER=521234567890

# Weekly report day (0=Monday, 6=Sunday)
WEEKLY_REPORT_DAY=0
WEEKLY_REPORT_HOUR=9
WEEKLY_REPORT_MINUTE=0

# Daily reminders time
DAILY_REMINDER_HOUR=18
DAILY_REMINDER_MINUTE=0

# Daily backup time
DAILY_BACKUP_HOUR=3
DAILY_BACKUP_MINUTE=0

# Calendar sync interval (minutes)
CALENDAR_SYNC_INTERVAL_MINUTES=15

# ===========================================
# SALON DEFAULTS (used for initial setup)
# ===========================================
SALON_NAME=Salón de Belleza
SALON_ADDRESS=Calle Principal #123, Ciudad
SALON_PHONE=+52 123 456 7890
SALON_HOURS=Lunes a Sábado: 9:00 AM - 8:00 PM

# ===========================================
# SECURITY
# ===========================================
# Secret key for signing tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=*
